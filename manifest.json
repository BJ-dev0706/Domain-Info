{
  "manifest_version": 3,
  "name": "Domain Info Viewer",
  "version": "1.0",
  "description": "Displays information about a domain",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "tabs"]
}